TIMEOUT 0
PROMPT 0

default install
label install
	menu label ^Install Ubuntu as Chef Client
	menu default
	kernel ubuntu-installer/<%= node[:pxe_dust][:arch] %>/linux
	append auto=true priority=critical interface=eth0 vga16fb.modeset=0 initrd=ubuntu-installer/<%= node[:pxe_dust][:arch] %>/initrd.gz netcfg/disabledhcp=false locale=en_US console-setup/ask_detect=false debian-installer/keymap=dvorak vga=0x317 keyboard-configuration/layoutcode=dvorak console-setup/layoutcode=dvorak netcfg/get_hostname=dummy netcfg/chooseinterface=eth0 url=http://<%= node[:ipaddress] %>/preseed.cfg dbg/flags=all-x DEBCONF_DEBUG=5 DEBCONF_INTERFACE=noninteractive

label cli
	menu label ^Command-line install
	kernel ubuntu-installer/<%= node[:pxe_dust][:arch] %>/linux
	append tasks=standard pkgsel/language-pack-patterns= pkgsel/install-language-support=false vga=788 initrd=ubuntu-installer/<%= node[:pxe_dust][:arch] %>/initrd.gz -- quiet 

label local
  localboot 0

